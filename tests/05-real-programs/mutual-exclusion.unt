/* Simple example of mutual exclusion using semaphores */

thread_def Thread1 {
  semaphore sem;
  receive {
    semaphore s -> sem = s;
    _ -> exit(1);
  }

  for (int i = 0; i < 100; i++) {
    sem--;
    print("I'm thread 1");
    print(i);
    sem++;
  }
}


thread_def Thread2 {
  semaphore sem;
  receive {
    semaphore s -> sem = s;
    _ -> exit(1);
  }

  for (int i = 0; i < 100; i++) {
    sem--;
    print("I'm thread 2");
    print(i);
    sem++;
  }
}


thread_def Main {
  // final naming of this function TBD
  semaphore my_sem = make_semaphore(1);

  thread my_thread1 = spawn Thread1;
  thread my_thread2 = spawn Thread2;

  my_thread1 << my_sem;
  my_thread2 << my_sem;
}
